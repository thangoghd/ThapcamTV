<resources>
    <style name="Theme.ThapcamTV" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:colorControlHighlight">@color/main_color</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackgroundBorderless">@drawable/selectable_item_background</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#40000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/selectable_item_background</item>
    </style>
</resources>